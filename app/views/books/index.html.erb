<h1>Books</h1>

<div>
  <table>
    <tr>
      <td></td>
      <td><strong>Title</strong></td>
      <td><strong>Opinion</strong></td>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user.id) do %>
            <%= image_tag book.user.get_profile_image(50, 50) %>
          <% end %>
        </td>
        <td>
          <%= link_to book_path(book.id) do %>
            <%= book.title %>
          <% end %>
        </td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </table>
</div>