<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <% if @book.errors.any? %>
        <div id="error_explanation">
          <h3>
            <%= @book.errors.count %> error prohibited this obj from being saved:
          </h3>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <div class="field-with-errors">
            <label for="inputTitle">Title</label>
          </div>
          <div class="field-with-errors">
            <%= f.text_field :title,  id:"inputTitle" %>
          </div>
        </div>
        <div class="form-group">
          <div class="mt-3">
            <label for="inputBody">Opinion</label>
          </div>
          <div>
            <%= f.text_area :body, id:"inputbody" %>
          </div>
        </div>
        <div class="form-group">
          <div class="mt-3">
            <%= f.submit "Update Book",class: 'btn btn-success' %>
          </div>
        </div>
      <% end %>
      <p class="mt-3"><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>
    </div>
  </div>
</div>