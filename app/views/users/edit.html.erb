<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h3>
            <%= @user.errors.count %> error prohibited this obj from being saved:
          </h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <div class="field_with_errors">
            <label for="inputName">Name</label>
          </div>
          <div class="field_with_errors">
            <%= f.text_field :name, autofocus: true, id:"inputName" %>
          </div>
        </div>
        <div class="form-group">
          <div class="mt-3">
            <label for="inputImage">Image</label>
          </div>
          <div>
            <%= f.file_field :profile_image, accept: "image/*" %>
          </div>
        </div>
        <div class="form-group">
          <div class="mt-3">
            <label for="inputIntroduction">Introduction</label>
          </div>
          <div>
            <%= f.text_area :introduction, id:"inputintroduction" %>
          </div>
        </div>
        <div class="form-group mt-3">
          <%= f.submit "Update User", class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>